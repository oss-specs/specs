{
  "name": "oss-specs",
  "version": "0.8.7",
  "bin": {
    "oss-specs": "./bin/www"
  },
  "directories": {
    "lib": "./lib"
  },
  "repository": "oss-specs/specs",
  "license": "MIT",
  "contributors": [
    "Jim Cresswell <jim@jimcresswell.net> (jimcresswell.net)",
    "Stanislaw Wozniak <swozniak@sponte.uk>"
  ],
  "keywords": [
    "cucumber",
    "specification by example",
    "bdd",
    "specifications",
    "living documentation"
  ],
  "scripts": {
    "prestart": "npm stop",
    "start": "node ./bin/www",
    "stop": "pkill specs || true",
    "test": "PORT=1337 node_modules/.bin/gulp test:features:fileoutput",
    "posttest": "cat test-results/cucumber.json | node_modules/.bin/cucumber-junit > test-results/cucumber.xml",
    "pretest-with-coverage": "PORT=1337 npm start &",
    "test-with-coverage": "PORT=1337 node_modules/.bin/istanbul cover node_modules/.bin/cucumber-js --report teamcity --report lcov -- --require features-support -f progress",
    "posttest-with-coverage": "npm stop",
    "upload-coverage-data": "node_modules/.bin/codeclimate-test-reporter < coverage/lcov.info",
    "lint": "node_modules/.bin/eslint ./"
  },
  "paths": {
    "server-js": [
      "bin/www",
      "app.js",
      "routes/**/*.js",
      "lib/**/*.js"
    ],
    "client-js": "public/javascript/**/*.js",
    "cucumber-support-js": "features-support/**/*.js",
    "unit-test-js": "lib/**/*test.js",
    "gulp-js": [
      "gulpfile.js",
      "gulp-tasks/**/*.js"
    ],
    "css": "public/css/**/*.css",
    "view-templates": "views/**/*.hbs",
    "feature-files": "features/**/*.feature",
    "test-output-dir": "test-results"
  },
  "dependencies": {
    "body-parser": "~1.14.0",
    "cookie-parser": "~1.4.0",
    "express": "~4.13.0",
    "express-session": "^1.11.3",
    "file-stream-rotator": "0.0.6",
    "gherkin": "^3.1.1",
    "github-markdown-css": "^2.0.9",
    "hbs": "^3.1.0",
    "lodash.assign": "^3.2.0",
    "markdown": "^0.5.0",
    "morgan": "~1.6.0",
    "newrelic": "^1.20.2",
    "nodegit": "^0.5.0",
    "q": "^1.4.1",
    "q-io": "^1.13.1",
    "serve-favicon": "~2.3.0",
    "session-file-store": "0.0.20",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.0",
    "cucumber": "^0.5.2",
    "cucumber-junit": "^1.3.0",
    "eslint": "^0.24.0",
    "gulp": "^3.9.0",
    "gulp-cucumber": "0.0.12",
    "gulp-develop-server": "^0.4.3",
    "gulp-eslint": "^0.15.0",
    "gulp-help": "^1.6.0",
    "gulp-jasmine": "^2.0.1",
    "istanbul": "^0.3.17",
    "jasmine-reporters": "^2.0.7",
    "minimist": "^1.1.2",
    "request": "^2.58.0",
    "require-dir": "^0.3.0",
    "run-sequence": "^1.1.2",
    "should": "^7.0.1"
  }
}
